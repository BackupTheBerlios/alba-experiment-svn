#!/bin/bash

. /sbin/functions.sh

STAGENAME="stage1.5-x86-sunos"
STAGEDIST="/var/tmp/${STAGENAME}"
STAGEPKGLIST="${GTODEVHOME}/conf/${STAGENAME}.pkglist"
OPT="--nodeps"

einfo "Creating ${STAGENAME} in ${STAGEDIST}"
cat ${STAGEPKGLIST} | while read pkg; do
	echo ROOT=${STAGEDIST} emerge -v --usepkg ${pkg}
	ROOT=${STAGEDIST} emerge -v --usepkgonly --noreplace ${OPT} ${pkg}
done 

